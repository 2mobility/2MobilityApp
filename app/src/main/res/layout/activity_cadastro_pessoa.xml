<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".project.view.CadastroPessoaActivity"
    android:background="@drawable/cadastro">

    <EditText
        android:id="@+id/editText8"
        android:layout_width="331dp"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="122dp"
        android:background="#313131"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:text="Confirmar Senha"
        android:textColor="#ffffff"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="414dp"
        tools:text="Confirmar Senha" />

    <EditText
        android:id="@+id/editText6"
        android:layout_width="331dp"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="183dp"
        android:background="#313131"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:text="Senha"
        android:textColor="#ffffff"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="354dp"
        tools:text="Senha" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="331dp"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="239dp"
        android:background="#313131"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:text="Email"
        android:textColor="#ffffff"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="294dp"
        tools:text="Email" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="76dp"
        android:layout_height="72dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/editText8"
        android:layout_marginTop="17dp"
        app:srcCompat="@drawable/logo_colorido"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="161dp"
        android:layout_height="43dp"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_alignEnd="@+id/editText8"
        android:text="Cadastre-se"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#319a29"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="187dp"
        tools:layout_editor_absoluteY="45dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="332dp"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="109dp"
        android:background="#313131"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:text="Name"
        android:textColor="#ffffff"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="114dp"
        tools:text="Nome" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="195dp"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/editText8"
        android:layout_marginTop="167dp"
        android:background="#313131"
        android:ems="10"
        android:inputType="phone"
        android:paddingLeft="10dp"
        android:text="Cel"
        android:textColor="#ffffff"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="174dp"
        tools:text="Cel" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="128dp"
        android:layout_height="44dp"
        android:layout_alignEnd="@+id/editText4"
        android:layout_alignTop="@+id/editText2"
        android:background="#313131"
        android:ems="10"
        android:inputType="date"
        android:paddingLeft="10dp"
        android:text="dd/mm/aaaa"
        android:textColor="#ffffff"
        tools:layout_editor_absoluteX="216dp"
        tools:layout_editor_absoluteY="174dp"
        tools:text="dd/mm/aaaa" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="331dp"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="226dp"
        android:background="#313131"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:text="CPF"
        android:textColor="#ffffff"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="234dp"
        tools:text="CPF" />

    <Button
        android:id="@+id/button"
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp"
        android:background="#319a29"
        android:text="CONCLUIR"
        android:textColor="#ffffff"
        tools:layout_editor_absoluteX="104dp"
        tools:layout_editor_absoluteY="490dp"
        tools:text="CONCLUIR" />

</RelativeLayout>