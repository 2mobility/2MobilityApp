<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/aultomovel"
    tools:context=".project.view.CadastroAutomovelFragment">


        <EditText
            android:id="@+id/editText18"
            android:layout_width="332dp"
            android:layout_height="44dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="226dp"
            android:background="#313131"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:hint="Preço"
            android:textColor="#ffffff"
            tools:layout_editor_absoluteX="14dp"
            tools:layout_editor_absoluteY="114dp"
            />

        <EditText
            android:id="@+id/editText13"
            android:layout_width="332dp"
            android:layout_height="44dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="169dp"
            android:background="#313131"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:hint="Km/litro"
            android:textColor="#ffffff"
            tools:layout_editor_absoluteX="14dp"
            tools:layout_editor_absoluteY="114dp"
            />


        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:text="Automóveis"
            android:textColor="#319a29"
            android:textSize="30dp" />


        <EditText
            android:id="@+id/editText"
            android:layout_width="332dp"
            android:layout_height="44dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="105dp"
            android:background="#313131"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:hint="Modelo"
            android:textColor="#ffffff"
            tools:layout_editor_absoluteX="14dp"
            tools:layout_editor_absoluteY="114dp"
            />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="333dp"
            android:layout_height="44dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="232dp"
            android:background="#313131"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/radioButton"
            android:layout_marginBottom="186dp"
            android:text="Tipo de Automovel:"
            android:textColor="#ffffff" />

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="136dp"
            android:layout_marginStart="48dp"
            android:checked="true"
            android:text="Carro"
            android:textColor="#ffffff"/>

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/radioButton"
            android:layout_marginEnd="49dp"
            android:checked="false"
            android:text="Moto"
            android:textColor="#ffffff"/>

        <Button
            android:id="@+id/button"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="66dp"
            android:background="#319a29"
            android:text="CADASTRAR"
            android:textColor="#ffffff"
            tools:layout_editor_absoluteX="104dp"
            tools:layout_editor_absoluteY="490dp"
            tools:text="CADASTRAR" />

</RelativeLayout>